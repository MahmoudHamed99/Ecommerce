include pug/components/_mixins
doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Ecommerce
        include pug/components/_styles
    body
        //- Start Navbar
        nav
            .container
                .nav-cont
                    .logo
                        h2 Cara
                    .nav-icons
                        i(class="fas fa-shopping-bag cart")
                        i(class="fas fa-outdent bars")
                    ul.links
                        li
                            i(class="fas fa-times fa-2x close")
                        li
                            a(href="index.html") Home
                        li
                            a.active(href="about.html") About
                        li
                            a(href="blog.html") Blog
                        li
                            a(href="shop.html") Shop
                        li
                            a(href="contact.html") Contact
                        li
                            a(href="cart.html"): i(class="fas fa-shopping-bag fa-lg cart")
        //- End Navbar
        +page-head("Know Us", "Lorem ipsum dolor sit, amet consectetur", "about-head")
        include pug/sections/_about
        include pug/sections/_app
        include pug/sections/_features
        include pug/sections/_sletter
        include pug/sections/_footer
        include pug/components/_scripts